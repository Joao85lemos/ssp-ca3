{{#each book}}
<form class="mt-4" action="{{#if id}}/books/edit{{else}}/books/create{{/if}}" method="post">
    {{#if id}}
        <input type="number" class="d-none form-control" name="id" value="{{id}}">
    {{/if}}
    <div class="row">
        <div class="col-4 mb-">
            <label for="tittle" class="form-label">tittle</label>
            <input type="text" class="form-control" id="tittle" name="tittle" value="{{#if tittle}}{{tittle}}{{/if}}" required>
        </div>
        <div class="col-4 mb-3">
            <label for="author" class="form-label">author</label>
            <input type="text" class="form-control" id="author" name="author" value="{{#if author}}{{author}}{{/if}}" required>
        </div>
        <div class="col-4 mb-3">
            <label for="genre" class="form-label">genre</label>
            <input type="text" class="form-control" id="genre" name="genre" value="{{#if genre}}{{genre}}{{/if}}" required>
        </div>
        <div class="col-12 mb-3">
            <label for="description" class="form-label">description</label>
            <textarea class="form-control" id="description" rows="3" name="description" required>{{#if description}}{{description}}{{/if}}</textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-4 mb-3">
            <label for="edition" class="form-label">edition</label>
            <input type="text" class="form-control" id="edition" name="edition" value="{{#if edition}}{{edition}}{{/if}}" required>
        </div>
        <div class="col-4 mb-3">
            <label for="publisher" class="form-label">publisher</label>
            <input type="text" class="form-control" id="publisher" name="publisher" value="{{#if publisher}}{{publisher}}{{/if}}" required>
        </div>
        <div class="col-4 mb-3">
            <label for="language" class="form-label">language</label>
            <select class="form-select" id="language" name="language" required>
                <option value="None" selected>(Select one)</option>
                <option value="English">English</option>
                <option value="French">French</option>
                <option value="Spanish">Spanish</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-6 mb-">
            <label for="price" class="form-label">price</label>
            <input type="text" class="form-control" id="price" name="price" value="{{#if price}}{{price}}{{/if}}" required>
        </div>
        <div class="col-6 mb-3">
            <label for="quantity" class="form-label">quantity</label>
            <input type="number" class="form-control" id="quantity" name="quantity" value="{{#if quantity}}{{quantity}}{{/if}}" required>
        </div>
    </div>
    <div class="row">
        <div class="col-12 mb-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>

<script>
    window.addEventListener("load", function(event) {
        let language = "{{#if language}}{{language}}{{/if}}";
        if (language === "") {
            document.getElementById('language').value = "None";
        } else {
            document.getElementById('language').value = language;
        }
    });
</script>
{{/each}}
