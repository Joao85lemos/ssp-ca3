{{#each book}}
<div class="mt-4 card text-center">
    <div class="card-header">
        {{author}}, {{publisher}} - Edition {{edition}}º
    </div>
    <div class="card-body">
        <h5 class="card-title">{{tittle}} - {{genre}}</h5>
        <p class="card-text">{{description}}</p>

        <a href="/books/edit/{{id}}" class="btn btn-primary">Edit</a>
        <a id="btn-delete" class="btn btn-danger" onclick="deleteRecord({{id}})">Delete</a>
        <a href="/books" class="btn btn-secondary">Go back</a>
    </div>
    <div class="card-footer text-muted">
        Value: {{price}} €
    </div>
</div>
{{/each}}

<script>
    function deleteRecord(id) {
        var result = confirm("Do you really want to delete this record? This process cannot be undone.");
        if (result) {
            let button = document.getElementById("btn-delete");
            button.href = "/books/delete/" + id;
        }
    }
</script>